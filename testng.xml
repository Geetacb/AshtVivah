<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="3">
	<test thread-count="5" name="Chrome Tests">
		<parameter name="browser-name" value="Chrome"></parameter>
		<classes>
			<class name="com.crossBrowserTesting.SampleTestCase" />
		</classes>
	</test> <!-- Test -->
	<test thread-count="5" name="Firefox Tests">
		<parameter name="browser-name" value="Firefox"></parameter>
		<classes>
			<class name="com.crossBrowserTesting.SampleTestCase" />
		</classes>
	</test> <!-- Test -->
	<test thread-count="5" name="Edge Tests">
		<parameter name="browser-name" value="Edge"></parameter>
		<classes>
			<class name="com.crossBrowserTesting.SampleTestCase" />
		</classes>
	</test> <!-- Test -->

</suite> <!-- Suite -->
